#!/bin/bash
#
# a simple dmenu session script 
#
###

DMENU='dmenu -i'
choice=$(echo -e "lockX\nshutdown\nreboot\nreloadsxhkd" | $DMENU)

case "$choice" in
  lock_X) slock &;;
  shutdown) sudo shutdown 0 &;;
  reboot) sudo reboot &;;
  suspend) sudo systemctl suspend &;;
  reload_sxhkd) pkill -USR1 -x sxhkd &;;
esac
