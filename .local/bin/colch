#! /bin/bash
    
#!/bin/bash
#
# a simple dmenu session script 
#
###

DMENU='dmenu -i -l 30'
choice=$(echo -e "gruvbox\nsolarized\nnord" | $DMENU)

case $choice in
        "gruvbox")
	    xrdb -remove
	    cp ~/.gruvbox.Xresources ~/.Xresources
	    xrdb load ~/.Xresources
	    ~/.config/polybar/launch.sh
	    sed -i 's/colorscheme [a-z]*/colorscheme gruvbox/g' ~/.config/nvim/init.vim
	    lxappearance &
            ;;
        "solarized")
	    xrdb -remove
	    cp ~/.solarized.Xresources ~/.Xresources 
	    xrdb load ~/.Xresources
	    ~/.config/polybar/launch.sh
	    sed -i 's/colorscheme [a-z]*/colorscheme solarized/g' ~/.config/nvim/init.vim
	    lxappearance &
            ;;
        "nord")
	    xrdb -remove
	    cp ~/.nord.Xresources ~/.Xresources 
	    xrdb load ~/.Xresources 
	    ~/.config/polybar/launch.sh
	    sed -i 's/colorscheme [a-z]*/colorscheme nord/g' ~/.config/nvim/init.vim
	    lxappearance &
            ;;
esac

