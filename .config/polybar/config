[module/clock]
type = internal/date

label = %date%  %time%

interval = 1
format-padding = 5
format-background = ${color.module-bg}
format-foreground = ${color.text-fg}
date =   %a
date-alt =   %a %d-%B-%Y

time = %I:%M %p
time-alt = %I:%M:%S %p

[module/weather]
type = custom/script
exec = i3weather
label = "%output%"
click-left = $TERMINAL -e w3m wttr.in/Kolhapur &
interval = 1800

