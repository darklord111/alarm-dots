[module/pacman-packages]
type = custom/ipc
hook-0 = sudo pacman -Qu | grep -cv ignored
format-prefix = "📦 "
click-left = st -e sudo pacman -Syu
initial = 1

[module/weather]
type = custom/script
exec = i3weather
label = "%output%"
click-left = $TERMINAL -e w3m wttr.in/Kolhapur &
interval = 1800

