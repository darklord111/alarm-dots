#podboat config
download-path "/home/smee/Downloads/Podcasts"
player "mocp"

# general config
auto-reload yes
cleanup-on-quit yes

# notifications config

notify-always yes
notify-format "newsbeuter: %n unread articles within %f unread feeds"
notify-program notify-send
notify-xterm yes
notify-screen yes

# macros config

browser "links -g %u"
macro y set browser "ytmpv %u"; open-in-browser ; set browser "links -g %u"
macro p set browser "tmpv %u"; open-in-browser ; set browser "links -g %u"

# colours config

color listnormal cyan default
color listfocus black yellow standout bold
color listnormal_unread blue default
color listfocus_unread yellow default bold
color info red black bold
color article white default bold

#Killfile config
define-filter "IGN" "title =~ \"Daily\ Fix\" or title =~ \"Trailer\""
